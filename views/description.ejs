<% include ./partials/Header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
    <div class="text-center mb-8">
        <h1 class="text-4xl font-bold">Welcome to the Blog</h1>
        <p class="text-lg opacity-75">Dive into this amazing blog post!</p>
    </div>
    <div class="card bg-zinc-900 p-5 rounded-lg shadow-lg max-w-3xl mx-auto">
        <!-- Blog Post Image -->
        <img 
            src="<%= post.image %>" 
            alt="Post Image" 
            class="w-full h-60 object-cover rounded-lg"
        />
        <!-- Blog Post Title -->
        <h5 class="mt-4 text-2xl font-bold"><%= post.title %></h5>
        <!-- Blog Post Description -->
        <p class="mt-4 text-sm text-gray-300">
            <%= post.description %>
        </p>
        <!-- Blog Post Author -->
        <h6 class="mt-6 text-xs opacity-75 text-gray-400">By @<%= post.user.username %></h6>
    </div>
</div>


<% include ./partials/footer.ejs %>